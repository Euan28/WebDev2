                        </path>
                    </svg>
                    <input type="text" class="form-control" placeholder="Coursework : Milestone" id="task" autofocus>
                </div>
                <button id="create" class="milestone-button" type="button" name="submit">Submit</button>
            </form>
        </div>
        {{#if tasks}}

        <div class="title">Milestones:</div>
        {{#each tasks}} {{#unless completed}}
        <div class="task clearfix">
            <span class="milestone-holder">
                {{task}}
            </span>
            <div>
                <button data-id="{{_id}}" type="button" class="btn btn-success complete">Completed</button>
                <button data-id="{{_id}}" type="button" class="btn btn-default edit">Edit</button>
                <button data-id="{{_id}}" type="button" class="btn btn-danger delete">Delete</button>
            </div>
        </div>
        {{/unless}} {{/each}}

        <div class="title">Completed Milestones:</div>
        {{#each tasks}} {{#if completed}}
        <div class="task clearfix">
            <span class="milestone-holder">
                {{task}}
            </span>
            <div class="btn-group pull-right" role="group" aria-label="...">
                <button data-id="{{_id}}" type="button" class="btn btn-danger delcomplete">Delete</button>
            </div>
        </div>
        {{/if}} {{/each}}
        {{/if}}
    </div>
    <div class="link">
        <a class="btn btn-secondary" href="/pages/home"><i class="fa fa-list-alt"></i> Home</a> or
        <a class="btn btn-secondary" href="/pages/addOrEdit"><i class="fa fa-list-alt"></i> Add Projects</a> or
        <a class="btn btn-secondary" href="/pages/list"><i class="fa fa-list-alt"></i> View Projects</a>
    </div>
    <div class="link">
        <a class="btn btn-secondary" href="/pages/login">Log Out</a>
    </div>
</div>